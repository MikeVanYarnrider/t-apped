            .setLngLat(well.coordinates)
            .setPopup(new mapboxgl.Popup({ offset: 25 })
              .setHTML(innerHTMLWinter))
            .addTo(myMap);
        }

        const evaluation = () => {
          if (closed) {
            closedPopup()
          } else if (winter) {
